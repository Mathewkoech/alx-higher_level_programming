#!/usr/bin/python3
"""script that takes in a URL and an email, sends a POST request to the passed URL with 
the email as a parameter, and displays the body of the response (decoded in utf-8)"""
import urllib.request
import urllib.parse
import sys


if __name__ == "__main__":
    url = sys.argv[1]
    #Email passed as parameter
    email = sys.argv[2]
    #Data to be sent
    data = urllib.parse.urlencode({'email': email})
    data = data.encode('utf-8')
    #POST request object creation
    request = urllib.request.Request(url, data=data, method='POST')
    #Send the request and read the response
    with urllib.request.urlopen(request) as response:
        #reading response body
        request_data = response.read().decode('utf-8')
        print(request_data)
